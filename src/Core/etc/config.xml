<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <!-- Set default configuration values for Magento settings -->
    <default>
        <!-- CUSTOMER CONFIGURATION SETTINGS -->
        <customer>
            <registration_options>
                <!-- Control the display status of Date of Birth field -->
                <!-- 0 = hidden, 1 = visible -->
                <dob_show>0</dob_show>

                <!-- Control the display status of Gender field -->
                <!-- 0 = hidden, 1 = visible -->
                <gender_show>0</gender_show>

                <!-- Control the display status of Prefix field -->
                <!-- 0 = hidden, req = required -->
                <prefix_show>0</prefix_show>

                <!-- Control the display status of Suffix field -->
                <!-- 0 = hidden, req = required -->
                <suffix_show>0</suffix_show>

                <!-- Control the display status of Telephone field -->
                <!-- 0 = hidden, req = required -->
                <telephone_show>req</telephone_show>

                <!-- Control the display status of Middle Name field -->
                <!-- 0 = hidden, req = required -->
                <middlename_show>req</middlename_show>

                <!-- Define the options for the Prefix dropdown -->
                <!-- Example: Mr., Mrs., Dr., etc. -->
                <prefix_options>Mr.,Mrs.</prefix_options>

                <!-- Define the options for the Suffix dropdown -->
                <!-- Example: Jr., Sr., III, etc. -->
                <suffix_options>Jr., Sr.</suffix_options>
            </registration_options>
        </customer>

        <!-- CUSTOMER SEGMENT SETTINGS -->
        <customersegment>
            <export>
                <!-- Enable or disable customer segment export -->
                <!-- 1 = enabled, 0 = disabled -->
                <status>1</status>
            </export>
        </customersegment>

        <!-- ACCOUNT SHARING SETTINGS -->
        <account_share>
            <!-- Define the scope of account sharing -->
            <!-- 0 = global, 1 = website -->
            <scope>0</scope>
        </account_share>

        <!-- ONLINE CUSTOMER SETTINGS -->
        <online_customers>
            <!-- Lifetime of section data in minutes -->
            <section_data_lifetime>1</section_data_lifetime>

            <!-- Define the interval for checking online customers in seconds -->
            <!-- Example: 31536000 seconds equals 1 year -->
            <online_minutes_interval>31536000</online_minutes_interval>
        </online_customers>

        <!-- ACCOUNT CREATION SETTINGS -->
        <create_account>
            <!-- Enable or disable auto group assignment -->
            <!-- 1 = enabled, 0 = disabled -->
            <auto_group_assign>0</auto_group_assign>

            <!-- Control the visibility of VAT field on the frontend -->
            <!-- 1 = visible, 0 = hidden -->
            <vat_frontend_visibility>0</vat_frontend_visibility>

            <!-- Enable or disable generation of human-friendly customer IDs -->
            <!-- 1 = enabled, 0 = disabled -->
            <generate_human_friendly_id>0</generate_human_friendly_id>

            <!-- Disable auto group assignment for VAT exempt customers -->
            <!-- 1 = enabled, 0 = disabled -->
            <viv_disable_auto_group_assign_default>0</viv_disable_auto_group_assign_default>
        </create_account>

        <!-- PASSWORD SETTINGS -->
        <password>
            <!-- Number of failed login attempts before account lockout -->
            <lockout_failures>6</lockout_failures>

            <!-- Number of seconds an account is locked after exceeding lockout failures -->
            <lockout_threshold>3</lockout_threshold>

            <!-- Minimum length required for passwords -->
            <minimum_password_length>6</minimum_password_length>

            <!-- Enable or disable password autocomplete on the storefront -->
            <!-- 1 = enabled, 0 = disabled -->
            <autocomplete_on_storefront>1</autocomplete_on_storefront>

            <!-- Minimum number of character classes required in the password -->
            <!-- Example: Uppercase, lowercase, numbers, symbols -->
            <required_character_classes_number>1</required_character_classes_number>

            <!-- Maximum number of password reset requests allowed -->
            <max_number_password_reset_requests>0</max_number_password_reset_requests>

            <!-- Minimum time (in seconds) between password reset requests -->
            <min_time_between_password_reset_requests>0</min_time_between_password_reset_requests>
        </password>

        <!-- CAPTCHA SETTINGS -->
        <captcha>
            <!-- Enable or disable CAPTCHA on the storefront -->
            <!-- 1 = enabled, 0 = disabled -->
            <enable>0</enable>
        </captcha>
    </default>
</config>
